{% extends ['base.twig'] %}

{% block content %}
	{{ parent() }}
	<div id="leftcolum">
		{% include '/main/main_sidebar.twig' %}
	</div>
	<div id="rightcolum">
		<div class="contentbox">
			<div class="blackbar"></div>
			<div class="heading" style="margin: 0; padding: 0">
				<div class="heading_title">something said here</div>
				<div id="tabbar">
					<div class="tabon"><a href="/main">images</a></div>
					<div class="taboff"><a href="/discussions">discussions</a></div>
					<div class="taboff"><a href="/hof">hall of fame</a></div>
					<div class="taboff"><a href="/audio">audio</a></div>
					<div class="taboff"><a href="/yearbook">yearbook</a></div>
					<div class="taboff"><a href="/search">search</a></div>
					<div style="clear: both; margin: 0; padding: 0"></div>
				</div>
			</div>

			<div class="bluebox" style="overflow:auto;">

				{% if data.filelist is defined %}
					{% for file in data.filelist  %}
						<div class="post_{{ cycle(['odd', 'even'], loop.index0) }}">
							<div class="post_table_left">
								<a href="/view/image/{{ file.id }}">
									{%  if file.tmbo == 1 %}
										[tmbo]
									{% endif %}
									{%  if file.nsfw == 1 %}
										[nsfw]
									{% endif %}
									{{ file.filename|e|slice(0,75) }}
								</a>
							</div>
							<div class="post_table_right"><a href="/discussions/image/{{ file.id }}">{{ file.comments.text }} comments (+{{ file.comments.tig }} -{{ file.comments.tib }})</a></div>
						</div>
					{% endfor %}
				{% else %}
					wtf.. that was odd..
				{% endif %}

			</div>{# end of bluebox#}

			<div class="blackbar"></div>
		</div>
	</div>
{% endblock %}